
{
  "openapi": "3.0.0",
  "info": {
    "title": "Atlas",
    "description": "Desafio complementar do chapter II",
    "version": "1.0.0"
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["users"],
        "summary": "Cria um novo usuário.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Jhon Doe",
                  "description": "jhon.doe@email.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Usuário já existe ou está faltando os campo name e email no requestBody"
          }
        }
      },
      "get": {
        "tags": ["users"],
        "summary": "Retorna todos os usuários",
        "description":"Lista todos os usuários caso o usuário buscado pelo user_id presente nos headers da requisição seja um admin.",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Usuário não encontrado. Ou o user_id header está faltando ou o usuário não é um admin"
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["users"],
        "summary": "Retorna um usuário específico",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Usuário não encontrado."
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "get": {
        "tags": ["users"],
        "summary": "Transforma um usuário em admin",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Usuário não encontrado."
          }
        }
      }
    }
  }
}
